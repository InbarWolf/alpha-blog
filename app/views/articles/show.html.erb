


<h2>Title: <%= @article.title %></h2>

<div class="row">
    <div class="col-md-10" align="center">
        <div class="well">
        <% if @article.user %>
            <h2 align="center"><%= @article.user.username %></h2>
            <%= gravatar_for @article.user %>
        <% end %>
        <h4 class="description">Description:</h4>
        <hr>
        <%= simple_format(@article.description) %>
        <%= render 'action_buttons', article: @article %>
        <%= link_to 'All Articles', articles_path, class: "btn btn-success btn-xs" %>
        </div>
    </div>
</div>